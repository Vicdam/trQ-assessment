pipeline{

    agent any

    parameters{
        string(name: "SPEC", defaultValue: "cypress/integration/**/**", description: "Enter the script path that you want to execute")
        choice(name: "BROWSER", choices:['chrome'], description:"choose the browser where you want to execute your script")
    }
    
    stages{
        stage('Install Dependencies'){
            steps{
               sh "npm i"
            }
        }
        stage('Building'){
            steps{
               echo "Building the Application"
            }
        }
        stage('Testing'){
            steps{
                sh "apt-get install libgtk2.0-0 libgtk-3-0 libgbm-dev libnotify-dev libgconf-2-4 libnss3 libxss1 libasound2 libxtst6 xauth xvfb -f"
                sh "node_modules/.bin/cypress run"
                sh "npx cypress run --browser ${BROWSER} --spec ${SPEC}"
            }
        }
        stage('Deploying'){
            steps{
                echo "Deploy the Application"
            }  
         }
    }
}
